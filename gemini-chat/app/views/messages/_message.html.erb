<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <% unless message.room.is_private %>
      <span class="name">
        <% if  message.user==current_user %>
          you:
        <% else %>
          <%= link_to message.user.username, message.user %>:
        <% end %>
      </span>
    <% end %>
  <%= message.content %>
  </div>
</div>
